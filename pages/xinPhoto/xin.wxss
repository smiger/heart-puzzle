page {
    background: #ff406a;
}
.top {
    display: flex;
    height: 80rpx;
    align-items: center;
    justify-content: space-around;
    margin: 20rpx auto;
    width: 70%;
}

.top-text {
    color: white;
    line-height: 80rpx;
    font-size: 26rpx;
}

.set {
    margin-right: 0;
    background: #ffffff;
    color: #ff406a;
    border-radius: 10rpx;
    line-height: 60rpx;
    font-size: 30rpx;
}

.fl {
  display: flex;
  height: 40rpx;
  align-items: center;
  justify-content: space-between;
  margin: 60rpx auto;
  width: 100%;
}

/* 保存按钮 */
.save {
    margin: 0;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    border-radius: 10rpx;
    background: #ffffff;
    color: #ff406a;
}

.choose-more {
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    margin: 0;
    background: #ffb800;
    color: #fff;
}

.set::after, .save::after, .choose-more::after {
  border: 0;
}


.progress {
    margin: 20rpx;
    color: #fff;
}

.container {
  width: 315px;
  height: 315px;
  margin: 20rpx auto;
  background: #fff;
}


.container2 {
  width: 945px;
  height: 945px;
  margin: 0 auto;
  position: fixed;
  left: 100%;
  bottom: -100%;
  background: #fd4966;
  z-index: -1;
}

.splice-page{
  background-color: #cc9999;
}
.saveButton{
  position:absolute;
  top:30rpx;
  right:40rpx;
  padding: 10rpx;
  font-size: 0;
  opacity: 0.7;
  z-index: 5;
}

.top-news {
    width: 80%;
    z-index: 999;
    overflow: hidden;
}


.scroll-view_H {
    white-space: nowrap;
    padding-left: 80rpx;
    width: 80%;
    box-sizing: border-box;
    background: #fff;
}

.nav-name {
    display: inline-block;
    padding: 20rpx;
}

.nav-name image {
    width: 80rpx;
    height: 80rpx;
    border: solid 3rpx #FF9CC2;
}